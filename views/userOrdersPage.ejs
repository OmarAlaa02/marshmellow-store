<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link rel="stylesheet" href="/userorder.css">
</head>
<body>
    <header>
        <h1>Shopping Cart</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <h2>Orders</h2>
        
        <!-- Example Order 1 -->
        <% for(let i=1; i<=orders.length; i++) { %>
        <div class="order">
            <div class="order-info">
                <div class="order-actions">
                    <p>Order #<%=i%></p>
                    <button class="details-btn"><a href="/orderDetails/<%=orders[i-1]._id%>">Details</a></button>
                    <p class="order-status <%= orders[i-1].status%>"><%=orders[i-1].status%></p>
                    <%if(orders[i-1].status==='pending') {%>
                        <form action="/deleteOrder/<%=orders[i-1]._id%>" method="post">
                            <button type="submit">delete</button>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        </form>
                    <%}%>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</body>
</html>